#converter_wrapper.d-flex.flex-column.flex-md-row.justify-content-center.align-items-center.fs-3.pt-5
    section.mx-4.d-flex.flex-column 
        input#base_unit_input.text-center(type="number" placeholder ='℃' )
        select#base_unit_selection.fs-4()
            option(value="Celsius") Celsius
            option(value="Fahrenheit") Fahrenheit
    p#equals.d-flex.align-items-center.justify-content-center.mt-3.mt-xl-0 
        i.fa-solid.fa-equals
    section.mx-4.d-flex.flex-column
        input#result_unit_input.text-center(type="text" placeholder ='℉' readonly)
        select#result_unit_selection.fs-4.pe-none.user-select-none()
            option(value="Fahrenheit") Fahrenheit
            option(value="Celsius") Celsius